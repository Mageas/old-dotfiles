#!/bin/sh

options="window
selection"

choice=$(echo "${options}" | dmenu -p "Which capture do you want?")

case "${choice}" in
    window)
        maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
        notify-send -i ${HOME}/.config/icons/screenshot_ico.png "Screenshot" "You're the best photographer I've ever seen."
    ;;
    selection)
        maim -s -u | xclip -selection clipboard -t image/png
        notify-send -i ${HOME}/.config/icons/screenshot_ico.png "Screenshot" "You're the best photographer I've ever seen."
    ;;
esac