#!/usr/bin/env bash

declare -a options=("window
selection")

choice=$(echo -e "${options[@]}" | dmenu -p "Which capture do you want?")

case "$choice" in
    window)
        maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
        notify-send -i $HOME/.config/icons/screenshot_ico.png "Screenshot" "You're the best photographer I've ever seen."
    ;;
    selection)
        maim -s | xclip -selection clipboard -t image/png
        notify-send -i $HOME/.config/icons/screenshot_ico.png "Screenshot" "You're the best photographer I've ever seen."
    ;;
esac