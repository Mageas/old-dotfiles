#!/bin/sh

options="mpv
vlc"

CLIPBOARD="$(xsel -b)"
if [ ${#CLIPBOARD} -gt 30 ]; then
    visual="$(echo ${CLIPBOARD} | cut -c1-20)...$(echo ${CLIPBOARD} | cut -c$((${#CLIPBOARD} - 7))-)"
else
    visual="${CLIPBOARD}"
fi

choice=$(echo "${options}" | dmenu -p "How to open ${visual} ?")

case "${choice}" in
    mpv)
        mpv ${CLIPBOARD}
        ;;
    vlc)
        vlc ${CLIPBOARD}
        ;;
esac